while True:
    first_name = input("What is your first name? ")
    last_name = input("What is your last name? ")
    dob_year = int(input("What year were you born? "))
    dob_month = int(input("What month were you born? "))
    dob_day = int(input("What day were you born? "))

    from datetime import datetime
    birth = (dob_year, dob_month, dob_day)
    current = (datetime.year, datetime.month, datetime.day)
    year_answer = current - birth

    while True:
        status = input("Have you been here before?")
        if status.lower() == "yes":
            print("Thank you. A doctor will be with you shortly.")
            exit()
        elif status.lower() == "no":
            print("Please fill out New Patient Form")
            break
        else:
            print("Yes or No answer only")

    address = input("What is your current residential address?: ")

    print("***Are these details correct?***")
    print("Name: ", first_name, last_name)
    print("Age: ", year_answer)
    print("Address: ", address)
    while True:
        answer = input("Yes/No?: ")
        if answer.lower() == "no":
            break
        elif answer.lower() == "yes":
            print("Thank you. A doctor will be with you shortly.")
            exit()
        else:
            print("Yes or No answers only.")
        continue



